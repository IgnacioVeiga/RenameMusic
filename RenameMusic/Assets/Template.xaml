<Window x:Class="RenameMusic.Template"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p = "clr-namespace:RenameMusic.Lang"
        mc:Ignorable="d"
        Title="{x:Static p:Strings.TEMPLATE}"
        MinHeight="250" MinWidth="300"
        SizeToContent="WidthAndHeight" 
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <TextBlock x:Name="simbols" Margin="10,10,10,66" TextWrapping="Wrap" d:Text="Example"/>
        <TextBox x:Name="template" Margin="10,0,10,40" TextWrapping="Wrap" VerticalAlignment="Bottom" TextChanged="Template_TextChanged"/>
        <Button x:Name="apply" Content="{x:Static p:Strings.APPLY}" Width="80" HorizontalAlignment="Center" Margin="0,0,100,10" VerticalAlignment="Bottom" Click="ApplyBTN_Click"/>
        <Button Content="{x:Static p:Strings.CANCEL}" Width="80" HorizontalAlignment="Center" Margin="100,0,0,10" VerticalAlignment="Bottom" Click="CancelBTN_Click"/>
    </Grid>
</Window>
