<Window x:Class="RenameMusic.LoadingBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RenameMusic"
        xmlns:p = "clr-namespace:RenameMusic.Lang"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="{x:Static p:Strings.LOADING}" Height="100" Width="350">
    <Grid Margin="20">
        <ProgressBar Minimum="0" Maximum="100" Name="loadingBarStatus" ValueChanged="loadingBarStatus_ValueChanged" />
        <TextBlock Text="{Binding ElementName=loadingBarStatus, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
