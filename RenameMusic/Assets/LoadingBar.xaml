<Window x:Class="RenameMusic.Assets.LoadingBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p = "clr-namespace:RenameMusic.Lang"
                
        Background="#202020" Foreground="#F1F1F1"
        
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Title="{x:Static p:Strings.LOADING}" Height="100" Width="360">
    <Grid Margin="20">
        <ProgressBar d:Value="50" Minimum="0" Maximum="100" Name="loadingBarStatus" Background="#F1F1F1" Foreground="#115F58"/>
        <TextBlock Text="{Binding ElementName=loadingBarStatus, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#101010" FontSize="16"/>
    </Grid>
</Window>
