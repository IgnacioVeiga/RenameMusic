<Window x:Class="RenameMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p = "clr-namespace:RenameMusic.Lang"
        xmlns:properties="clr-namespace:RenameMusic.Properties"
        mc:Ignorable="d"
        MinHeight="350" MinWidth="600"
        SizeToContent="Manual" 
        ResizeMode="CanResizeWithGrip"
        Title="Rename Music" Foreground="#FF333333" Background="#FFBBBBBB">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="400"></ColumnDefinition>
            <ColumnDefinition Width="230"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="{x:Static p:Strings.FILE}">
                <MenuItem Header="{x:Static p:Strings.ADD_FILE}" Click="AddFile_Click" />
                <MenuItem Header="{x:Static p:Strings.ADD_FOLDER}" Click="AddFolder_Click"/>
                <MenuItem Header="{x:Static p:Strings.SAVE_LIST}" Click="SaveList_Click" IsEnabled="False"/>
                <Separator />
                <MenuItem x:Name="renameFilesBTN" Header="{x:Static p:Strings.RENAME_FILES}" Click="RenameFilesBTN_Click" IsEnabled="False"/>
                <Separator />
                <MenuItem Header="{x:Static p:Strings.EXIT}" Click="ExitMenuItem_Click"/>
            </MenuItem>

            <MenuItem Header="{x:Static p:Strings.SETTINGS}">
                <MenuItem Header="{x:Static p:Strings.RESTORE_SETTINGS}" Click="RestoreSettingsBTN_Click"/>
                <MenuItem Header="{x:Static p:Strings.IMPORT_SETTINGS}" Click="ImportSettingsBTN_Click" IsEnabled="False"/>
                <MenuItem Header="{x:Static p:Strings.EXPORT_SETTINGS}" Click="ExportSettingsBTN_Click" IsEnabled="False"/>
                <Separator />
                <MenuItem Header="{x:Static p:Strings.TEMPLATE}" Click="TemplateBTN_Click"/>

                <MenuItem Header="{x:Static p:Strings.SEARCH_SUBFOLDERS}" IsCheckable="True"
                              IsChecked="{Binding IncludeSubFolders, Source={x:Static properties:Settings.Default}}"
                              Checked="IncludeSubFolders_Check"/>

                <MenuItem Header="{x:Static p:Strings.LANGUAGE}">
                    <ComboBox x:Name="langSelected" SelectionChanged="LangSelected_SelectionChanged" SelectedIndex="{Binding LangIndex, Source={x:Static properties:Settings.Default}}">
                        <ComboBoxItem Content="English"/>
                        <ComboBoxItem Content="Español"/>
                    </ComboBox>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="{x:Static p:Strings.HELP}">
                <MenuItem Header="{x:Static p:Strings.ABOUT}" IsEnabled="False"/>
            </MenuItem>
        </Menu>


        <Image Grid.Row="1" Grid.Column="1" x:Name="pictures" HorizontalAlignment="Center" VerticalAlignment="Top" Height="170" Width="170" Margin="10" d:Source="./Assets/Icons/icon.ico" Source="{Binding Pictures}"/>

        <TabControl Grid.Row="1" Grid.Column="0" x:Name="tabs" HorizontalAlignment="Stretch" Margin="0,10">
            
            <TabItem Header="{x:Static p:Strings.WITH_TAGS}">
                <ListView x:Name="withTagsList" Margin="10" d:ItemsSource="{d:SampleData ItemCount=30}" SelectionMode="Single" SelectionChanged="ListWithTags_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="{x:Static p:Strings.NAME}" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="{x:Static p:Strings.NEW_NAME}" DisplayMemberBinding="{Binding NewName}"/>
                            <GridViewColumn Header="{x:Static p:Strings.TYPE}" DisplayMemberBinding="{Binding Type}"/>
                            <GridViewColumn Header="{x:Static p:Strings.DURATION}" DisplayMemberBinding="{Binding Duration, StringFormat=hh\\:mm\\:ss}"/>
                            <GridViewColumn Header="{x:Static p:Strings.TITLE}" DisplayMemberBinding="{Binding Tags.Title}"/>
                            <GridViewColumn Header="{x:Static p:Strings.ALBUM}" DisplayMemberBinding="{Binding Tags.Album}"/>
                            <GridViewColumn Header="{x:Static p:Strings.ARTIST}" DisplayMemberBinding="{Binding Tags.Performers[0]}"/>
                            <GridViewColumn Header="{x:Static p:Strings.ALBUM_ARTIST}" DisplayMemberBinding="{Binding Tags.AlbumArtists[0]}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

            <TabItem Header="{x:Static p:Strings.NO_TITLE_TAG}">
                <ListView x:Name="noTitleTagList" Margin="10" d:ItemsSource="{d:SampleData ItemCount=20}" SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="{x:Static p:Strings.NAME}" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="{x:Static p:Strings.TYPE}" DisplayMemberBinding="{Binding Type}"/>
                            <GridViewColumn Header="{x:Static p:Strings.DURATION}" DisplayMemberBinding="{Binding Duration, StringFormat=hh\\:mm\\:ss}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

            <TabItem Header="{x:Static p:Strings.FOLDERS}">
                <ListView x:Name="folderList" Margin="10" d:ItemsSource="{d:SampleData ItemCount=10}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="30">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Width="20" Height="20" Content="X" Click="RemoveFolderItem_Click"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="{x:Static p:Strings.DIRECTORY}" DisplayMemberBinding="{Binding Path}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
