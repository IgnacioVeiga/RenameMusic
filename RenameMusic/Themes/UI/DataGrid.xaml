<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="RowBackground" Value="{DynamicResource BackgroundColor0}"/>
        <Setter Property="AlternatingRowBackground" Value="{DynamicResource BackgroundColor1}"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="{DynamicResource CustomRowForeground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CustomBorderBrush}"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="GridLinesVisibility" Value="Vertical"/>
        <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource CustomBorderBrush}"/>
    </Style>

    <Style TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="Background" Value="{DynamicResource BackgroundColor1}"/>
        <Setter Property="Foreground" Value="{DynamicResource ForegroundColor1}"/>
        <Setter Property="Padding" Value="0,5"/>
    </Style>
</ResourceDictionary>